{
  "compilerOptions": {
    "target": "es2018",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "importHelpers": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "declaration": true,
    "incremental": true
  },
  "include": ["src/*.ts"]
}
